.cvs_and_contact
    mt($sp--double)
    width 100%
    border-top 2px solid white
    padding-top $sp--double

    &__list
        display flex
        flex-direction row
        flex-wrap wrap
        align-items stretch
        justify-content space-between

    &__item
        display flex
        align-items stretch
        flex 0 0 100%
        +above(3)
            flex 0 0 49%
        +above(6)
            flex 0 0 32%
        display flex
        +below(2)
            mt()
        +above(3)
            min-height 100%
        bxsh-simple()

        &:nth-child(even)
            +between(3,5)
                margin-left 2%

        &:nth-child(3n+2)
        &:nth-child(3n+3)
            +above(6)
                margin-left 2%

        &:nth-child(n+3)
            +between(3,5)
                margin-top 2%

        &:nth-child(n+4)
            +above(6)
                margin-top 2%

        &:last-child
            margin-right auto

    &__cv_anchor
        pos-r()
        display flex
        flex-direction column
        align-items stretch
        height 100%
        width 100%
        background-color white
        padding-bottom 4px

        &:active
        &:focus
        &:hover

            &::before
                width 100%

        &::before
            trans($properties: "width")
            content ''
            position absolute
            bottom 0
            left 0
            height 4px
            width 0
            background-color $cl--second

    &__cv_image
        flex 0 0 auto
        min-width 100%

    &__cv_title
        trans()
        flex 1 1 auto
        mt(0)
        width 100%
        background-color white
        padding $sp--half

    &__contact_details_anchor
        trans($properties: "background-color")
        display flex
        flex-direction column
        align-items center
        justify-content center
        height 100%
        width 100%
        background-color $cl--second--low
        padding $sp

        &:active
        &:focus
        &:hover
            background-color darken(saturate($cl--second--low, 6%), 6%)

            & ^[0]__contact_details_anchor_text
                transform scale(1.1)

    &__contact_details_anchor_text
        trans($properties: "transform")
        text-shadow 0 0 .24em $cl--second--dark
        fz-scale--two()
        text-align center
        color white
