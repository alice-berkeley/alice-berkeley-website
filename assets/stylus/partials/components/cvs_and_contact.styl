.cvs_and_contact
    mt($sp--double)
    width 100%
    border-top 2px solid $cl--second--dark
    padding-top $sp--double

    &__list
        display flex
        flex-direction row
        flex-wrap wrap
        align-items stretch
        justify-content space-between

    &__item
        flex 0 0 100%
        +above(3)
            flex 0 0 49%
        +above(6)
            flex 0 0 32%
        display flex
        height 100%

        &:nth-child(even)
            +between(3,5)
                margin-left 2%

        &:nth-child(3n+2)
        &:nth-child(3n+3)
            +above(6)
                margin-left 2%

        &:nth-child(n+3)
            +between(3,5)
                margin-top 2%

        &:nth-child(n+4)
            +above(6)
                margin-top 2%

        &:last-child
            margin-right auto

    &__cv_anchor
        display flex
        flex-direction column
        align-items stretch
        height 100%
        box-shadow inset 0 0 0 $cl--third

        &:active
        &:focus
        &:hover
            box-shadow inset 0 -4px 0 $cl--third

    &__cv_image
        flex 0 0 auto
        width 100%

    &__cv_title
        trans()
        flex 1 1 auto
        mt(0)
        background-color white
        padding $sp--half

    &__contact_details
        background-color white
        height 100%
        padding $sp--half
