.focus_pulling_showreel
    width 100%

    &__title
        color white

    &__video_list
        display flex
        flex-direction row
        flex-wrap wrap
        align-items flex-start
        justify-content space-between
        mt()
        width 100%

    &__video_item
        flex 0 0 100%
        +above(3)
            flex 0 0 49%
        +above(6)
            flex 0 0 32%
        display flex

        &:nth-child(even)
            +between(3,5)
                margin-left 2%

        &:nth-child(3n+2)
        &:nth-child(3n+3)
            +above(6)
                margin-left 2%

        &:nth-child(n+3)
            +between(3,5)
                margin-top 2%

        &:nth-child(n+4)
            +above(6)
                margin-top 2%

        &:last-child
            margin-right auto

    &__video
        width 100%
        max-width 100%
