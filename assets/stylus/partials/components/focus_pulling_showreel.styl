.focus_pulling_showreel
    width 100%

    &__title
        text-shadow 0 0 .24em $cl--low
        color white

    &__video_list
        display flex
        flex-direction row
        flex-wrap wrap
        align-items flex-start
        justify-content space-between
        mt()
        width 100%

    &__video_item
        flex 0 0 100%
        +above(3)
            flex 0 0 49%
        +above(6)
            flex 0 0 32%
        display flex
        +below(2)
            mt()
        bxsh-simple()
        background-color black

        &:nth-child(even)
            +between(3,5)
                margin-left 2%

        &:nth-child(3n+2)
        &:nth-child(3n+3)
            +above(6)
                margin-left 2%

        &:nth-child(n+3)
            +between(3,5)
                margin-top 2%

        &:nth-child(n+4)
            +above(6)
                margin-top 2%

        &:last-child
            margin-right auto

    &__video
        pos-r()
        padding-bottom 56.25%
        height 0
        width 100%
        max-width 100%

    &__video_iframe
        position absolute
        top 0
        right 0
        bottom 0
        left 0
        height 100%
        width 100%
